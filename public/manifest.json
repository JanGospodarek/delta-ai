{
  "manifest_version": 3,
  "name": "Delta AI",
  "short_name": "Delta AI",
  "version": "0.0.1",
  "description": "Ext for using AI in Delta",
  "icons": {
    "16": "/icons/logo.png",
    "32": "/icons/logo.png",
    "48": "/icons/logo.png",
    "192": "/icons/logo.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  }
}