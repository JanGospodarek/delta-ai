{
  "manifest_version": 3,
  "version": "0.1",
  "name": "Token Swift",
  "short_name": "Token Swift",
  "description": "Token Swift - handy Web3 lending platform",
  "action": {
    "default_popup": "./dist/index.html"
  },
  "icons": {
    "16": "/logo.png",
    "32": "/logo.png",
    "48": "/logo.png",
    "192": "/logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "storage"]
}
